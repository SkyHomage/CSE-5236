<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse5236.screenaddict"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cse5236.screenaddict.SplashScreen"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cse5236.screenaddict.Login"
            android:label="@string/title_activity_login"
            android:permission="com.cse5236.screenaddict.LAUNCHACTIVITY"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="com.cse5236.screenaddict.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cse5236.screenaddict.HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.cse5236.screenaddict.Home" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cse5236.screenaddict.SearchResultsTabbed"
            android:label="@string/title_activity_search_results_tabbed" >
        </activity>
    </application>

</manifest>
